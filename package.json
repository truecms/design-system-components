{
  "name": "auds",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/truecms/design-system-components"
  },
  "devDependencies": {
    "@changesets/changelog-git": "^0.2.1",
    "@changesets/cli": "^2.27.5",
    "autoprefixer": "^10.4.21",
    "cfonts": "^3.3.1",
    "chalk": "^5.6.2",
    "express": "^4.21.2",
    "inquirer": "^9.3.8",
    "jest": "^29.7.0",
    "pa11y": "^9.0.1",
    "postcss": "^8.4.35",
    "puppeteer": "^24.26.1",
    "rimraf": "^5.0.10",
    "sass": "^1.71.0",
    "semver": "^7.7.3",
    "treeify": "^1.1.0"
  },
  "scripts": {
    "scaffolding": "node ./scripts/helper.js scaffolding",
    "bootstrap": "pnpm install --frozen-lockfile",
    "build": "pnpm -r run build",
    "changeset": "changeset",
    "prepare:version": "changeset version",
    "release": "changeset publish",
    "publish": "pnpm run release",
    "nuke": "pnpm run delete:node_modules && pnpm run delete:lib",
    "delete:node_modules": "pnpm -r exec rimraf node_modules && rimraf node_modules",
    "delete:lib": "rimraf packages/*/lib",
    "test:unit-test": "jest --runInBand",
    "test": "pnpm run test:unit-test && node scripts/helper.js test && node ./scripts/a11y.js",
    "build:site-dist": "node scripts/build-site-dist.js"
  },
  "jest": {
    "testRegex": "\\.spec.js$",
    "collectCoverageFrom": [
      "packages/*/lib/js/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.2"
}
